@inherits LayoutComponentBase

<FluentLayout>
    <FluentToastProvider />
    <FluentDialogProvider />
    <FluentTooltipProvider />
    <FluentMessageBarProvider />
    <FluentMenuProvider />

    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>

    <FluentFooter>
        <small><a href="mailto:mwmccabe@devfor.net" target="_blank">Contact</a></small>
        <div style="padding-left: 8px;" />
        <small><a href="https://github.com" target="_blank">GitHub</a></small>        
        <FluentSpacer />
        <small>Free and open-source news aggregator for .NET developers</small>
        <FluentSpacer />
        <small>Created by <a href="https://github.com/mccabe93" target="_blank">Michael McCabe</a></small>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>